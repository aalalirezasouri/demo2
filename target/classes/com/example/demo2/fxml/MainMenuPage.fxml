<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo2.view.MainMenuPageController"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="10.0">
            <Button text = "new Game" onMouseClicked="#startNewGame"/>
            <Button text = "continue Game" onMouseClicked="#continueGame"/>
            <Button text = "profile" onMouseClicked="#profileMenu"/>
            <Button text = "scoreboard" onMouseClicked="#scoreboard"/>
            <Button text = "white and black" onMouseClicked="#setGrayScale"/>
            <Button text = "Exit :(" onMouseClicked="#exit"/>
        </VBox>
    </center>

</BorderPane>
